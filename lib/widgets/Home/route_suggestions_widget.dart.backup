  String? error;

  Future<void> findRouteSuggestions() async {
    print('ğŸ¯ RouteSuggestionsWidget.findRouteSuggestions called');
    print('ğŸ¯ User coordinates from params: (${widget.userLatitude}, ${widget.userLongitude})');
    print('ğŸ¯ Destination: (${widget.destinationLatitude}, ${widget.destinationLongitude})');

    if (widget.destinationLatitude == null || widget.destinationLongitude == null) {
      print('âŒ Destination coordinates are null');
      setState(() {
        error = 'Destino no especificado';
      });
      return;
    }

    setState(() {
      isLoading = true;
      error = null;
    });

    try {
      // ğŸš¨ SOLUCIÃ“N: Usar coordenadas del usuario desde parÃ¡metros, no ubicaciÃ³n actual
      double userLat, userLng;

      if (widget.userLatitude != null && widget.userLongitude != null) {
        // Usar coordenadas del usuario que se pasaron como parÃ¡metro
        userLat = widget.userLatitude!;
        userLng = widget.userLongitude!;
        print('âœ… Using user coordinates from parameters: ($userLat, $userLng)');
      } else {
        // Fallback: obtener ubicaciÃ³n actual si no hay coordenadas del usuario
        print('âš ï¸ No user coordinates in parameters, getting current location...');
        Position? position;
        try {
          position = await LocationService.getCurrentLocation()
              .timeout(const Duration(seconds: 10));
        } catch (e) {
          print('âŒ Timeout getting location: $e');
          setState(() {
            error = 'Tiempo de espera agotado al obtener ubicaciÃ³n. Verifica tu conexiÃ³n GPS.';
            isLoading = false;
          });
          return;
        }

        if (position != null) {
          userLat = position.latitude;
          userLng = position.longitude;
          print('âœ… Got current location as fallback: ($userLat, $userLng)');
        } else {
          print('âŒ Could not get current location');
          setState(() {
            error = 'No se pudo obtener la ubicaciÃ³n actual';
            isLoading = false;
          });
          return;
        }
      }

      print('ğŸ¯ Using origin coordinates: ($userLat, $userLng)');
      print('ğŸ¯ Destination coordinates: (${widget.destinationLatitude}, ${widget.destinationLongitude})');

      // Verificar que las coordenadas del destino no sean nulas o cero
      if (widget.destinationLatitude == null || widget.destinationLongitude == null ||
          widget.destinationLatitude == 0.0 || widget.destinationLongitude == 0.0) {
        print('âŒ Destination coordinates are null or zero!');
        setState(() {
          error = 'Coordenadas del destino no disponibles';
          isLoading = false;
        });
        return;
      }
        
        // Buscar sugerencias de rutas con timeout
        print('ğŸ¯ Calling LocationApiService.suggestRoute...');
        Map<String, dynamic> result;
        try {
          result = await LocationApiService.suggestRoute(
            userLatitude: userLat,
            userLongitude: userLng,
            destinationLatitude: widget.destinationLatitude!,
            destinationLongitude: widget.destinationLongitude!,
            maxWalkingDistance: 1000, // 1 km mÃ¡ximo caminando
          ).timeout(const Duration(seconds: 15));
        } catch (e) {
          print('âŒ Timeout or error in API call: $e');
          setState(() {
            error = 'Tiempo de espera agotado al buscar rutas. Verifica tu conexiÃ³n a internet.';
            isLoading = false;
          });
          return;
        }

        print('ğŸ¯ API result: $result');

        if (result['status'] == 'success') {
          print('ğŸ¯ Success! Processing suggestions...');
          try {
            final data = result['data'];
            if (data == null) {
              throw Exception('Campo "data" es null en la respuesta');
            }
            
            // Manejar tanto la estructura antigua (all_suggestions) como la nueva (data directo)
            List<dynamic> allSuggestions;
            if (data is List) {
              // Nueva estructura: data es directamente la lista de sugerencias
              allSuggestions = data;
            } else if (data is Map && data.containsKey('all_suggestions')) {
              // Estructura antigua: data contiene all_suggestions
              allSuggestions = data['all_suggestions'];
              if (allSuggestions == null) {
                throw Exception('Campo "all_suggestions" es null en la respuesta');
              }
            } else {
              throw Exception('Estructura de datos no reconocida en la respuesta');
            }
            
            print('ğŸ” allSuggestions type: ${allSuggestions.runtimeType}');
            print('ğŸ” allSuggestions length: ${allSuggestions.length}');
            print('ğŸ” First suggestion: ${allSuggestions.isNotEmpty ? allSuggestions.first : 'No suggestions'}');
            
            final suggestions = <RouteSuggestionModel>[];
            
            for (int i = 0; i < allSuggestions.length; i++) {
              try {
                print('ğŸ” Processing suggestion $i: ${allSuggestions[i]}');
                final suggestion = RouteSuggestionModel.fromJson(allSuggestions[i]);
                suggestions.add(suggestion);
              } catch (e) {
                print('âŒ Error processing suggestion $i: $e');
                print('âŒ Suggestion data: ${allSuggestions[i]}');
                // Continuar con la siguiente sugerencia sin crear fallback
              }
            }

            print('ğŸ¯ Processed ${suggestions.length} suggestions');

            setState(() {
              routeSuggestions = suggestions;
              isLoading = false;
            });
          } catch (e) {
            print('âŒ Error processing suggestions: $e');
            setState(() {
              error = 'Error al procesar las sugerencias de rutas: ${e.toString()}';
              isLoading = false;
            });
          }
        } else if (result['status'] == 'error' && result['message']?.contains('No se encontraron rutas') == true) {
          // This is a valid response indicating no routes were found
          print('ğŸ¯ No routes found - this is expected behavior');
          setState(() {
            routeSuggestions = []; // Empty list to show "no routes" message
            isLoading = false;
          });
        } else {
          print('âŒ API returned error status: ${result['status']}');
          setState(() {
            error = result['message'] ?? 'Error al obtener sugerencias';
            isLoading = false;
          });
        }
      } else {
        print('âŒ Could not get current position');
        setState(() {
          error = 'No se pudo obtener la ubicaciÃ³n actual';
          isLoading = false;
        });
      }
    } catch (e) {
      print('âŒ Exception in findRouteSuggestions: $e');
      setState(() {
        error = 'Error inesperado: ${e.toString()}';
        isLoading = false;
      });
    }
  }

  @override
  void initState() {
    super.initState();
